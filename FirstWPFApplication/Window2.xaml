<Window x:Class="FirstWPFApplication.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFApplication"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtInput" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="780" FontSize="32" GotFocus="txtInput_GotFocus" TextChanged="txtInput_TextChanged" />
        <Button x:Name="btnGetInput" Content="Input" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontSize="32" Width="345" IsEnabled="False" Click="btnGetInput_Click"/>
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="43,167,0,0" VerticalAlignment="Top" FontSize="32"/>

    </Grid>
</Window>
